<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this account from being made:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %> 

    <%= f.label "password" %>
    <%= f.password_field :password_digest %>

    <%= f.label "password confirmation" %>
    <%= f.password_field :password_confirmation %>
<%= f.submit %>
<% end %>